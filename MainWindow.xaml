<Window x:Class="Infotols.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Infotols"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="CRM Management Application" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Button Content="Gestions des Clients " Height="50" Margin="10" Click="Clients_Click" />
            <Button Content="Contact et Rendez-vous" Height="50" Margin="10" Click="Contacts_Click"/>
            <Button Content="Gestions des Produits" Height="50" Margin="10" Click="Produit_Click" />
            <Button Content="Facturation" Height="50" Margin="10" Click="Facturation_Click" />
        </StackPanel>

        <!-- Zone de maintenance -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Maintenance" FontSize="16" FontWeight="Bold" Margin="5"/>
            <Button Content="Rehash Mots de Passe" Height="40" Width="200" Margin="5"  />
        </StackPanel>
    </Grid>
</Window>
