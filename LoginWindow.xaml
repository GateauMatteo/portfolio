<Window x:Class="Infotols.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Infotols"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <!-- Titre -->
        <TextBlock Text="Connexion ou Inscription" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,20,0,0" FontWeight="Bold"/>

        <!-- Nom d'utilisateur -->
        <Label Content="Email  :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <TextBox Name="UsernameTextBox" Width="300" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,50,0"/>

        <!-- Mot de passe -->
        <Label Content="Mot de passe :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,130,0,0"/>
        <PasswordBox Name="PasswordBox" Width="300" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,130,50,0"/>

        <!-- Prénom -->
        <Label Content="Prénom (Inscription) :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,180,0,0"/>
        <TextBox Name="FirstNameTextBox" Width="300" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,180,50,0"/>

        <!-- Nom -->
        <Label Content="Nom (Inscription) :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,230,0,0"/>
        <TextBox Name="LastNameTextBox" Width="300" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,230,50,0"/>

        <!-- Bouton Connexion -->
        <Button Content="Se connecter" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="200,0,0,50" Click="LoginButton_Click"/>

        <!-- Bouton S'inscrire -->
        <Button Content="S'inscrire en tant que commercial" Width="250" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,200,50" Click="RegisterButton_Click"/>
    </Grid>
</Window>
